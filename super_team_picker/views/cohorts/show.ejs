<%- include('../partials/header') %>

<div class="card mx-3 my-2">
            <div class="card-body">
                <h5 class="card-title"><%= cohort.name %></h5>
                <p class="card-text"><%= cohort.members %></p>
                <div class="d-flex">
                    <a href="/cohorts/<%= cohort.id%>/edit" class="btn btn-outline-primary mr-2">Edit</a>
                    <form method="POST" action="/cohorts/<%= cohort.id %>">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="submit" value="Delete" class="btn btn-outline-primary">
                    </form>
                </div>
    <form method="GET" action="/cohorts/<%= cohort.id %>">
    <hr>
    <div class="form-group">
        <label for="method">Method</label><br>
        
        <input type="radio" name="method" value="teamCount" 
        <% if(formValues.method=="teamCount"){%> checked="checked" <%}%>
        > Team Count<br>
        <input type="radio" name="method" value="perTeam" 
        <% if (formValues.method == "perTeam"){ %> checked="checked" <%}%>
        > Number Per Team<br>

    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label><br>
        <input type="text" name="quantity" value="<%= formValues.quantity || ''%>" class="form-control">
    </div>
    <input type="submit" value="Assign Teams" class="btn btn-outline-primary btn-block">
    </form>
    <% if (teamsArray.length >= 1) { %>
        <div>
        <table class="table">
            <tr>
                <th>#</th>
                <th>Members</th>
            </tr>
            <% for (let i = 0; i <= teamsArray.length-1; i += 1) { %>
                <tr>
                    <td> <%= i+1 %> </td>
                    <td> <%= teamsArray[i].join(',') %> </td>
                </tr>
            <% } %>
        </table>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
