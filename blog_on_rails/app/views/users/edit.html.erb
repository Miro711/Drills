<h1 class="mx-3">Edit Profile</h1>

<%= form_with model: @user, local: true, class: "mx-3 my-2 p-1 clearfix" do |f| %>

  <% if @user.errors.any? %>
    <p>
      <%= @user.errors.full_messages.join(", ")  %>
    </p>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= link_to("Change Password", change_password_path(current_user.id)) %>
  </div>


  <%= f.submit "Edit Profile", :class => "btn btn-outline-primary float-right" %>
<% end %>