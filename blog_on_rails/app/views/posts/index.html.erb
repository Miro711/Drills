  <div class="col-sm-12 col-md-6 col-lg-4 py-2">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title"><%= link_to post.title, post_path(post.id), class:"text-primary" %></h5>
        <%= post.body %> </p>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
