<h1 class="mx-3">New Post</h1>

<%= form_with(model: @post, local: true, class: "mx-3 my-2 p-1 clearfix") do |form| %>
  
  <% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  <div class="form-group">
    <%= form.label :title %> <br />
    <%= form.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :body %> <br />
    <%= form.text_area :body, cols: 50, rows: 5, class:"form-control" %>
  </div>

  <%= form.submit "Create Post", :class => "btn btn-outline-primary float-right" %>

<% end %>